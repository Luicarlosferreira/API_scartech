

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  password String
  // posts Post[]
  // products Product[]
  isAdmin Boolean
}

model Post {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  description String
  imageUrl String
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  // author     User    @relation(fields: [authorId], references: [id])
  // authorId   String  @db.ObjectId  
}

model Product{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  category String
  title String
  price String
  // imageUrl String
  brand String
  // author     User    @relation(fields: [authorId], references: [id])
  // authorId   String  @db.ObjectId
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}