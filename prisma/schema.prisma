

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  password String
  isAdmin Boolean
}

model Post {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  title  String
  description String
  image Json[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt  
  authorId   String  @db.ObjectId  
}

model Product{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  category String
  title String
  price String
  image Json[]
  description String 
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}